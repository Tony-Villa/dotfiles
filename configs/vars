export DENO_INSTALL=~/.deno
PATH=$PATH:$DENO_INSTALL/bin
if [ ! -d $DENO_INSTALL ]; then
    curl -fsSL https://deno.land/x/install/install.sh | sh
fi

export BUN_INSTALL=~/.bun
PATH=$PATH:$BUN_INSTALL/bin
if [ ! -d $BUN_INSTALL ]; then
    curl https://bun.sh/install | bash
fi

export BAT_CONFIG_PATH=~/.dotfiles/configs/bat/config

[ -d $HOME/.cargo ] && PATH=$HOME/.cargo/bin:$PATH
[ -d $HOME/bin ] && PATH=$HOME/bin:$PATH

[ -d ~/Library/Python/3.8/bin ] && export PATH=~/Library/Python/3.8/bin:$PATH;

# linux
[ -d ~/Android/Sdk/ ] && export ANDROID_HOME=~/Android/Sdk
# mac
[ -d ~/Library/Android/Sdk/ ] && export ANDROID_HOME=~/Library/Android/Sdk
export ANDROID_SDK_ROOT=$ANDROID_HOME

mkdir -p ~/.local/bin

if ! command -v op-ssh-sign &> /dev/null; then
    if [ -f /Applications/1Password.app/Contents/MacOS/op-ssh-sign ]; then
        sudo ln -s /Applications/1Password.app/Contents/MacOS/op-ssh-sign ~/.local/bin/op-ssh-sign
    elif [ -f /opt/1Password/op-ssh-sign ]; then
        sudo ln -s /opt/1Password/op-ssh-sign ~/.local/bin/op-ssh-sign
    fi
fi

if command -v fnm &> /dev/null; then
    # eval "$(fnm env --use-on-cd)"
    eval "$(fnm env)"
fi

[ -f /opt/homebrew/bin/brew ] && eval "$(/opt/homebrew/bin/brew shellenv)"

PATH=$PATH:$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools
PATH=~/.local/bin:$PATH
PATH=~/.dotfiles/scripts:$PATH
export PATH=.:$PATH