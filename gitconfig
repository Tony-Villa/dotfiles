[init]
	defaultBranch = main

[protocol]
	version = 2

[core]
	excludesfile = ~/.dotfiles/gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = code --wait

[url "file://"]
	insteadOf = git+file://

[credential "https://github.com"]
	helper = !gh auth git-credential

[user]
	name = Jonathan Grimes
	email = jsg2021@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDbn8X8OGnCZYxq9J8aiK6whgLIq8s1h9v5uEGGuargP

[commit]
	template = ~/.dotfiles/gitcommit_template
	gpgsign = true

[gpg]
	format = ssh

[gpg "ssh"]
	; Make sure to add these to the path:
	; /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	; /opt/1Password/op-ssh-sign
    program = op-ssh-sign

[pull]
	rebase = true

[push]
	default = simple

[rebase]
	autostash = true
	autosquash = true

[interactive]
	diffFilter = diff-so-fancy --patch

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[color]
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse

[diff-so-fancy]
	markEmptyLines = false

[alias]
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
